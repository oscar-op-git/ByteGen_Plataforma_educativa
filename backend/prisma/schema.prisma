generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model community {
  id_group_group Int
  id_user_user   String
  group          group  @relation(fields: [id_group_group], references: [id_group], onDelete: Cascade, map: "group_fk")
  user           User   @relation(fields: [id_user_user], references: [id], onDelete: Cascade, map: "user_fk")

  @@id([id_group_group, id_user_user], map: "community_pk")
}

model curso {
  id_course   Int       @id(map: "curso_pk") @default(autoincrement())
  titulo      String?   @db.VarChar
  description String?   @db.VarChar
  fecha_ini   DateTime? @db.Date
  fecha_fin   DateTime? @db.Date
  modulo      modulo[]
}

model evaluacion {
  id_evaluacion    Int        @id(map: "evaluacion_pk") @default(autoincrement())
  titulo           String?    @db.VarChar
  description      String?    @db.VarChar
  id_topico_topico Int?
  topico           topico?    @relation(fields: [id_topico_topico], references: [id_topico], map: "topico_fk")
  pregunta         pregunta[]
}

model group {
  id_group               Int         @id(map: "group_pk") @default(autoincrement())
  description            Int?        @db.SmallInt
  id_plantilla_plantilla Int?
  community              community[]
  plantilla              plantilla?  @relation(fields: [id_plantilla_plantilla], references: [id_plantilla], onUpdate: NoAction, map: "plantilla_fk")
  orden                  orden[]
}

model modulo {
  id_modulo        Int     @id(map: "modulo_pk") @default(autoincrement())
  titulo           String? @db.VarChar
  description      String? @db.VarChar
  id_course_course Int?
  id_topico_topico Int?
  curso            curso?  @relation(fields: [id_course_course], references: [id_course], map: "curso_fk")
  topico           topico? @relation(fields: [id_topico_topico], references: [id_topico], map: "topico_fk")
}

model multimedia {
  id_multimedia     Int                 @id(map: "multimedia_pk") @default(autoincrement())
  url_view          String?             @db.VarChar
  url_original      String?             @db.VarChar
  multimedia_topico multimedia_topico[]
}

model multimedia_topico {
  id_multimedia_multimedia Int
  id_tipo_multimedia       Int
  id_topico_topico_t       Int?
  multimedia               multimedia      @relation(fields: [id_multimedia_multimedia], references: [id_multimedia], onDelete: Cascade, map: "multimedia_fk")
  tipo_multimedia          tipo_multimedia @relation(fields: [id_tipo_multimedia], references: [id_tipo_multimedia], onDelete: Cascade)
  topico                   topico?         @relation(fields: [id_topico_topico_t], references: [id_topico], onDelete: Cascade)

  @@id([id_multimedia_multimedia, id_tipo_multimedia], map: "multimedia_topico_pk")
}

model orden {
  id_orden         Int     @id(map: "orden_pk") @default(autoincrement())
  puesto           Int?    @db.SmallInt
  id_group_group   Int?
  id_topico_topico Int?
  group            group?  @relation(fields: [id_group_group], references: [id_group], map: "group_fk")
  topico           topico? @relation(fields: [id_topico_topico], references: [id_topico], map: "topico_fk")
}

model pregunta {
  id_pregunta                    Int            @id(map: "pregunta_pk") @default(autoincrement())
  contenido                      String?        @db.VarChar
  id_tipo_pregunta_tipo_pregunta Int?
  id_evaluacion_evaluacion       Int?
  evaluacion                     evaluacion?    @relation(fields: [id_evaluacion_evaluacion], references: [id_evaluacion], map: "evaluacion_fk")
  tipo_pregunta                  tipo_pregunta? @relation(fields: [id_tipo_pregunta_tipo_pregunta], references: [id_tipo_pregunta], map: "tipo_pregunta_fk")
  respuesta                      respuesta[]
}

model respuesta {
  id_respuesta         Int       @id(map: "respuesta_pk") @default(autoincrement()) @db.SmallInt
  contenido            String?   @db.VarChar
  id_user_user         String?
  id_pregunta_pregunta Int?
  pregunta             pregunta? @relation(fields: [id_pregunta_pregunta], references: [id_pregunta], map: "pregunta_fk")
  user                 User?     @relation(fields: [id_user_user], references: [id], map: "user_fk")
}

model role {
  id_role     Int     @id(map: "role_pk") @default(autoincrement())
  description String? @db.VarChar
  user        User[]
}

model tipo_pregunta {
  id_tipo_pregunta Int        @id(map: "tipo_pregunta_pk") @default(autoincrement())
  description      String?    @db.VarChar
  pregunta         pregunta[]
}

model topico {
  id_topico         Int                 @id(map: "topico_pk") @default(autoincrement())
  titulo            String?             @db.VarChar
  description       String?             @db.VarChar
  evaluacion        evaluacion[]
  modulo            modulo[]
  multimedia_topico multimedia_topico[]
  orden             orden[]
}

model User {
  id            String      @id @default(cuid())
  name          String?     @db.VarChar
  email         String?     @unique @db.VarChar
  emailVerified DateTime?
  image         String?
  first_name    String?     @db.VarChar
  last_name     String?     @db.VarChar
  passwordHash  String?     @map("password") @db.VarChar
  verified      Boolean?    @default(false)
  isAdmin       Boolean     @default(false)
  id_role_role  Int?
  accounts      Account[]
  sessions      Session[]
  community     community[]
  plantilla     plantilla[]
  respuesta     respuesta[]
  role          role?       @relation(fields: [id_role_role], references: [id_role], map: "role_fk")

  @@map("user")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
  @@map("auth_account")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id])

  @@map("auth_session")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("auth_verification_token")
}

model comment {
  id           Int        @id @default(autoincrement())
  author_name  String
  content      String
  created_at   DateTime   @default(now()) @db.Timestamptz(6)
  plantilla_id Int?
  plantilla    plantilla? @relation(fields: [plantilla_id], references: [id_plantilla], onDelete: Cascade)
  replies      replies[]
}

model replies {
  id          Int      @id @default(autoincrement())
  comment_id  Int
  author_name String
  content     String
  created_at  DateTime @default(now()) @db.Timestamptz(6)
  comment     comment  @relation(fields: [comment_id], references: [id], onDelete: Cascade, map: "fk_reply_comment")
}

model tipo_multimedia {
  id_tipo_multimedia Int                 @id(map: "tipo_topico_pk") @default(autoincrement())
  description        String?             @db.VarChar
  multimedia_topico  multimedia_topico[]
}

model plantilla {
  id_plantilla Int       @id @default(autoincrement())
  es_borrador  Boolean   @default(true)
  json         Json
  nombre       String?   @db.VarChar
  user_id      String?
  comment      comment[]
  group        group[]
  user         User?     @relation(fields: [user_id], references: [id], onDelete: Cascade)
}
