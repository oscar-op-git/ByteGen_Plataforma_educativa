{
  "compilerOptions": {
    /* Paths */
    
    "rootDir": "./src",
    "outDir": "./dist",

    /* MÃ³dulos/Runtime */
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",

    /* Calidad de vida */
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Tipado */
    "strict": true,
    "skipLibCheck": true,

    /* Outputs adicionales */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    

    /* Opcional: imports absolutos desde src */
    "baseUrl": "./src"
  },
  "include": ["src/**/*", "src/types/**/*"]
}
